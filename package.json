{
 "repository": "https://github.com/joemphilips/cycle-walletts",
 "description": "bitcoin wallet suite in typescript",
 "license": "MIT",
 "workspaces": [
  "packages/*"
 ],
 "scripts": {
  "test": "lerna run test --stream --ignore=blockchain-driver",
  "test:docker-integration": "lerna run test --stream && yarn all",
  "all": "lerna run test-all --scope=walletts-app",
  "clean": "lerna clean --stream --yes",
  "bootstrap": "lerna bootstrap --stream",
  "build": "lerna run build --stream",
  "dev": "lerna run dev --parallel"
 },
 "private": true,
 "devDependencies": {
  "lerna": "^2.9.0",
  "typescript": "2.8"
 },
 "publishConfig": {
  "access": "public"
 }
}
